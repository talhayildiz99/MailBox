@model MailBox.PresentationLayer.Models.MailListModel

@{
    ViewData["Title"] = "Compose";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="font-weight-bold mb-0">Yeni Mail Oluştur</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Mail Oluştur</h4>

                    <!-- Mail Gönderme ve Taslak Kaydetme Formu -->
                    <form method="post" id="composeForm">
                        <div class="form-group">
                            <label for="ReceiverEmail">Alıcı:</label>
                            <input type="email" class="form-control" id="ReceiverEmail" name="ReceiverEmail" value="@Model?.ReceiverEmail" required>
                        </div>
                        <div class="form-group">
                            <label for="MailSubject">Konu:</label>
                            <input type="text" class="form-control" id="MailSubject" name="MailSubject" value="@Model?.MailSubject" required>
                        </div>
                        <div class="form-group">
                            <label for="MailContent">Mesaj:</label>
                            <textarea class="form-control" id="MailContent" name="MailContent" rows="10" required>@Model?.MailContent</textarea>
                        </div>
                        <button type="submit" formaction="@Url.Action("Compose", "Mail")" class="btn btn-primary">Gönder</button>
                        <button type="submit" formaction="@Url.Action("DraftAdd", "Mail")" class="btn btn-secondary">Taslak Olarak Kaydet</button>
                        <a href="@Url.Action("Inbox", "Mail")" class="btn btn-secondary">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

