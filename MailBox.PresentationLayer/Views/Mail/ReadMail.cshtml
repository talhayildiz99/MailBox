@model MailBox.PresentationLayer.Models.MailListModel

@{
    ViewData["Title"] = "Read Mail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="font-weight-bold mb-0">Mail Detayları</h4>
                </div>
                <div>
                    <a href="@Url.Action("Inbox", "Mail")" class="btn btn-secondary">
                        <i class="mdi mdi-arrow-left"></i> Gelen Kutusuna Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Model.MailSubject</h4>
                    <div class="media mb-4">
                        <img src="@ViewBag.SenderImageUrl" alt="profile" class="img-sm rounded-circle mr-3">
                        <div class="media-body">
                            <p class="mb-0">
                                <strong>Gönderen:</strong> @Model.Sender?.Email (@ViewBag.SenderName)
                            </p>
                            <p>
                                <strong>Tarih:</strong> @Model.MailDate.ToString("dd MMMM yyyy HH:mm")
                            </p>
                        </div>
                    </div>
                    <div class="border p-3 mb-3">
                        <p>@Model.MailContent</p>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Inbox", "Mail")" class="btn btn-secondary">Gelen Kutusuna Dön</a>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@Model.MailId" />
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
