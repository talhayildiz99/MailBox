
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<script src="~/coronatheme/template/assets/js/chart.js"></script>

<div class="row">
    <div class="col-md-4 grid-margin">
        <div class="card" style="height: 100%;">
            <div class="card-body" style="display: flex; flex-direction: column;">
                <h4 class="card-title">Mail Akışı</h4>
                <canvas id="transaction-history" class="transaction-chart" style="flex-grow: 1;"></canvas>
                <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                    <div class="text-md-center text-xl-left">
                        <h6 class="mb-1">Toplam Mail Akışı</h6>
                        <p class="text-muted mb-0">@ViewBag.TodayDate, @ViewBag.Time</p>
                    </div>
                    <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                        <h6 class="font-weight-bold mb-0">@ViewBag.Total</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 grid-margin">
        <div class="card" style="height: 100%;">
            <div class="card-body" style="display: flex; flex-direction: column;">
                <h4 class="card-title">@ViewBag.User</h4>
                <img src="@ViewBag.ImageUrl" alt="Image" style="flex-grow: 1; object-fit: cover; width: 100%; height: auto;" />
            </div>
        </div>
    </div>
    <div class="col-md-4 grid-margin">
        <div class="card" style="height: 100%;">
            <div class="card-body" style="display: flex; flex-direction: column;">
                <h4 class="card-title">İstatistikler</h4>
                <canvas id="barChart" style="flex-grow: 1; height: auto;"></canvas>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Okunmayan Mailler</h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.IsRead</h2>
                        </div>
                        <h6 class="text-muted font-weight-normal">@ViewBag.TodayDate</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-comment-text text-primary ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Yıldızlı Mesajlar</h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.IsStarred</h2>
                        </div>
                        <h6 class="text-muted font-weight-normal">@ViewBag.TodayDate</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-star text-danger ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Taslaklar</h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.Draft</h2>
                        </div>
                        <h6 class="text-muted font-weight-normal">@ViewBag.TodayDate</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-reload text-success ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Silinen Mailler</h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.Delete</h2>
                        </div>
                        <h6 class="text-muted font-weight-normal">@ViewBag.TodayDate</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-delete text-primary ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Spam Mesajlar</h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.Spam</h2>
                        </div>
                        <h6 class="text-muted font-weight-normal">@ViewBag.TodayDate</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi mdi-emoticon-poop text-danger ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

